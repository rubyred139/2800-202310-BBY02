<%- include("templates/header") %>

<body>
  <div class="bg-primary-subtle">
    <div class="p-3 mt-4 d-flex justify-content-center fs-3">Your profile preferences:</div>
    <div class="d-flex gap-1 px-3 justify-content-center px-3 py-2 fs-4">
      <span id="quiz1-answer-goes-here" class="badge bg-success-subtle text-success-emphasis rounded-pill">
        <%= quizAnswers.question1 %>
      </span>
      <span id="quiz2-answer-goes-here" class="badge bg-danger-subtle text-primary-emphasis rounded-pill">
        <%= quizAnswers.question2 %>
      </span>

      <span id="quiz3-answer-goes-here" class="badge bg-warning-subtle text-warning-emphasis rounded-pill">
        <%= quizAnswers.question3 %>
      </span>
      <span id="quiz4-answer-goes-here" class="badge bg-info-subtle text-info-emphasis rounded-pill">
        <%= quizAnswers.question4 %>
      </span>

    </div>
    <a href="/quizWelcome" type="button" class="d-flex justify-content-center mt-2 mb-2">
      <span
        class="d-flex justify-content-center align-items-center mx-auto fs-4 btn btn-outline-secondary rounded-pill m-3"> 
        Retake the quiz
        <img src="./arrow_forward.png" height="70%"></img>
      </span>

    </a>
  </div>

    <div class="d-flex justify-content-center align-items-center pt-5">
      <h1 class="fw-bold fs-1">PICK A COUNTRY</h1>
    </div>

  <div class="album py-3 ">
    <div class="container">

      <div class="list-group list-group-checkable d-grid gap-2 border-0">
        <div id="newcard-goes-here" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

          <% let i=0; %>
          <% for(i=0; i < confirmedCountries.length; i++) { %>              
            <div class="row">
              <div class="col">
                <input class="list-group-item-check pe-none visually-hidden" type="radio" name="listGroupCheckableRadios" id="listGroupCheckableRadios1">
                <label class="list-group-item btn btn-outline-warning rounded-3 py-3"     for="listGroupCheckableRadios1">
          
                  <!-- <span class="d-block small opacity-50">With support text underneath to add more detail</span> -->
                  <div class="card shadow-sm" style="outline: none;">
                    <div class="card-body card-front">
                      <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                      xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail"
                      preserveAspectRatio="xMidYMid slice" focusable="false">
                      <title>Placeholder</title>
                      <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                      </svg>
                    </div>

                    <div class="card-body card-back">
                      <h2 class="card-title">
                        <%= confirmedCountries[i].name %>
                      </h2>          
                      <p class="card-text">
                        <%= confirmedCountries[i].location %>
                        <br>
                        <%= confirmedCountries[i].descr %>
                      </p>
                      <div class="d-flex justify-content-between align-items-center">
                      </div>
                      <div class="btn-group">
                        <form name="redirect" action="/main/<%= confirmedCountries[i].name %>" method="post">
                          <button class="btn btn-sm btn-outline-secondary read-more-btn">Read more</button>
                        </form>
                      </div>
                    </div>     
                  </div>       
                </label>
              </div>
            </div>
          <% } %>

          </div>
        </div>
      </div>
    </div>

    <a class="d-flex gap-3 justify-content-center pb-5 m-5">

     <img id="dieButton" src="./dices.png" class="btn btn-outline-light" width="250"></img>
    </a>
    
    <script>
      const cards = document.querySelectorAll('.card');

      cards.forEach(card => {
        card.addEventListener('click', () => {
          card.classList.toggle('flipped');
        });
      });

      const readMoreBtns = document.querySelectorAll('.read-more-btn');
      readMoreBtns.forEach(btn => {
        btn.addEventListener('click', e => {
          e.stopPropagation();
        });
      });
      // document.getElementById('read-more-btn').addEventListener('click', function(event) {
      //   const countryName = 
      // })
    </script>
  </body>

