<%- include("templates/header") %>

<div class="container mb-5">
  <br>
  <h1>Tell Us About Your Trip</h1>
  <br>
  <form method="post" action="/reviewForm">
    <div class="form-group">
      <label for="reviewTitle">Review Title</label>
      <input type="text" class="form-control" id="reviewTitle" name="reviewTitle">
      <br>
    </div>
    <div class="form-group">
      <label for="countryName">Country Name</label>
      <input type="text" class="form-control" id="countryName" name="countryName">
      <br>
    </div>
    <div class="form-group">
      <label for="visitTime">When did you visit?</label>
      <select class="form-control" id="visitTime" name="visitTime">
        <option>Spring</option>
        <option>Summer</option>
        <option>Fall</option>
        <option>Winter</option>
      </select>
      <br>
    </div>
    <div class="form-group">
      <label for="tripLength">How long was your trip?</label>
      <select class="form-control" id="tripLength" name="tripLength">
        <option>1-3 days</option>
        <option>4-7 days</option>
        <option>8-14 days</option>
        <option>More than 14 days</option>
      </select>
      <br>
    </div>
    <div class="form-group">
      <label for="vacationType">What type of vacation did you have?</label>
      <select class="form-control" id="vacationType" name="vacationType">
        <option>Relaxing getaway</option>
        <option>Adventure trip</option>
        <option>Cultural exploration</option>
        <option>Family vacation</option>
        <option>Romantic getaway</option>
        <option>Solo trip</option>
        <option>Business travel</option>
      </select>
      <br>
    </div>
    <div class="form-group">
      <label for="experience">Tell us about your experience</label>
      <textarea class="form-control" id="experience" name="experience" rows="3"></textarea>
    </div>
    <br>
    <div class="d-flex justify-content-end mb-5">
      <input type="hidden" name="userId" value="<%= userId %>">
      <input type="hidden" name="name" value="<%= name %>">
      <button type="submit" class="btn btn-outline-secondary mb-4">Submit</button>
    </div>
  </form>
</div>

<%- include("templates/footer") %>
