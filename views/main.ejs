<%- include("templates/header") %>

<div class="container px-4 py-5" id="featured-3">
  <h2 class="pb-2 border-bottom">
    <%= gachaCountry %>
    <div class="d-inline-flex">
      <form action="/bookmark" method="post">
        <button type="submit" class="bookmark-button">
          <span
            class="material-symbols-outlined <%= isBookmarked ? 'bookmark-colour' : '' %>"
          >
            bookmark
          </span>
        </button>
      </form>
    </div>
    <div class="d-inline-flex float-end">
      <form action="/reviewForm" method="get">
        <input type="hidden" name="country" value="<%= gachaCountry %>" /> 
        <button type="submit" class="btn btn-sm btn-outline-secondary">
          Leave a review
        </button>
      </form>
    </div>
  </h2>
</div>

<!--easter egg part shows here-->
<div id="airplane-container" class="hidden">
  <img src="coolDuck.png" width="150" id="airplane-image" />
  <img src="wind.gif" width="90" />
</div>

<div id="confetti-container"></div>
<!--easter egg part ends here-->

<div class="row g-4 pb-5 row-cols-1 row-cols-lg-3">
  <div class="col d-flex align-items-start">
    <div
      class="icon-square text-body-emphasis d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3"
    >
      <!--easter egg icon-->
      <div id="startButton-container">
        <img id="startButton" src="/takeOff.png" width="20" />
      </div>
    </div>
    <div class="d-flex flex-column">
      <h3 class="fs-2">Interesting fact!</h3>
      <p class="mb-0"><%= facts.quirkyFact %></p>
      <img class="mt-3 w-100" src="<%= imagesList[0] %>" alt="country image" />
    </div>
  </div>

